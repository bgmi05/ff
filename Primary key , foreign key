SELECT * FROM Department;
SELECT * FROM Student;

SELECT 
    Student.Student_ID,
    Student.Student_Name,
    Department.Dept_Name
FROM 
    Student
JOIN 
    Department 
ON 
    Student.Dept_ID = Department.Dept_ID;
