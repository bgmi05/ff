#include<xc.h>
#define LCD_EN PORTCbits.RC1
#define LCD_RS PORTCbits.RC0
void delay()
{
int i;
for(i=0;i<5000;i++);
}
char string1[]={'S','A','M','R','U','D','H','I'};
char string2[]={'K','A','R','D','I','L','E'};

void sendCmd(char cmd)
{
LCD_RS=0;
delay();
LCD_EN=1;
delay();
PORTB=cmd;
delay();
LCD_EN=0;
delay();
}

void sendData(char lcddata)
{
LCD_RS=1;
delay();
LCD_EN=1;
delay();
PORTB=lcddata;
delay();
LCD_EN=0;
delay();
}

void main()
{
char i,p;
TRISB=0;
TRISCbits.RC0=0;
TRISCbits.RC1=0;
//initialize
sendCmd(0x38);
sendCmd(0x0E);
sendCmd(0x01);
while(1)
{
sendCmd(0x80);
for(i=0;i<5;i++)
{
p=string1[i];
sendData(p);
}
sendCmd(0xC0);
for(i=0;i<7;i++)
{
p=string2[i];
sendData(p);
}
delay();
}
}


